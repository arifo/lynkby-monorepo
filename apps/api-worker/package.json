{
  "name": "@lynkby/api-worker",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev src/workers/index.ts --local --config wrangler.toml --port 8787",
    "dev:graceful": "wrangler dev src/workers/index.ts --local --config wrangler.toml --port 8787 --graceful-shutdown",
    "build": "tsc -p tsconfig.json",
    "deploy": "pnpm build && wrangler deploy --config wrangler.toml",
    "deploy:dev": "pnpm build && wrangler deploy --config wrangler.toml --env development",
    "deploy:prod": "pnpm build && wrangler deploy --config wrangler.toml --env production",
    "setup": "chmod +x scripts/dev-setup.sh && ./scripts/dev-setup.sh",
    "validate": "chmod +x scripts/validate-env.sh && ./scripts/validate-env.sh",
    "start": "chmod +x dev-start.sh && ./dev-start.sh",
    "migrate": "tsx scripts/migrate.ts",
    "seed": "tsx prisma/seed.ts",
    "db:generate": "tsx --tsconfig scripts/tsconfig.json scripts/migrate.ts generate",
    "db:migrate": "tsx --tsconfig scripts/tsconfig.json scripts/migrate.ts migrate",
    "db:push": "tsx --tsconfig scripts/tsconfig.json scripts/migrate.ts push",
    "db:reset": "tsx --tsconfig scripts/tsconfig.json scripts/migrate.ts reset",
    "db:status": "tsx --tsconfig scripts/tsconfig.json scripts/migrate.ts status",
    "db:studio": "tsx --tsconfig scripts/tsconfig.json scripts/migrate.ts studio",
    "db:migrate:dev": "tsx --tsconfig scripts/tsconfig.json scripts/migrate.ts",
    "db:migrate:generate": "tsx --tsconfig scripts/tsconfig.json scripts/migrate.ts generate",
    "db:migrate:deploy": "tsx --tsconfig scripts/tsconfig.json scripts/migrate.ts migrate",
    "db:migrate:push": "tsx --tsconfig scripts/tsconfig.json scripts/migrate.ts push",
    "db:migrate:reset": "tsx --tsconfig scripts/tsconfig.json scripts/migrate.ts reset",
    "db:migrate:status": "tsx --tsconfig scripts/tsconfig.json scripts/migrate.ts status"
  },
  "dependencies": {
    "@lynkby/shared": "workspace:*",
    "@lynkby/server": "workspace:*",
    "@neondatabase/serverless": "^1.0.1",
    "@prisma/client": "6.14.0",
    "@prisma/extension-accelerate": "^2.0.2",
    "@sentry/cloudflare": "^10.8.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "cookie": "^1.0.2",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.1",
    "hono": "^4.5.7",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250115.0",
    "@types/jsonwebtoken": "^9.0.6",
    "prisma": "6.14.0",
    "tsx": "^4.19.2",
    "typescript": "^5.5.4",
    "wrangler": "^4.32.0"
  }
}
