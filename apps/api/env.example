# API App Environment Variables
# Copy this to .env and fill in your values

# App API Base URL
APP_API_BASE="https://app.lynkby.com"

# Revalidation Secret
REVALIDATE_SECRET="your-secret-here"

# App Configuration
NODE_ENV="production"

# JWT Configuration
JWT_SECRET="your-jwt-secret-must-be-at-least-32-characters-long"
JWT_EXPIRES_IN="7d"

# Sentry Configuration
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# Database Configuration (Prisma Accelerate)
DATABASE_URL="postgresql://username:password@your-neon-host:5432/lynkby_prod"
DIRECT_URL="postgresql://username:password@your-neon-host:5432/lynkby_prod"

# External Services
STRIPE_SECRET_KEY="sk_live_your_stripe_live_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"
TIKTOK_CLIENT_KEY="your_tiktok_client_key"
TIKTOK_CLIENT_SECRET="your_tiktok_client_secret"
